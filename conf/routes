# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.QueueController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /cookies                    controllers.QueueController.testCookies

GET     /queue/read                 controllers.QueueController.readAll

GET     /queue/read/:aUserId       controllers.QueueController.read(aUserId: Int)


# DELETE  /queue/delete               controllers.QueueController.deleteAllDone

# PUT     /queue/done/:aOrderId       controllers.QueueController.markDone(aOrderId: Int)

# +nocsrf
POST    /queue/add                  controllers.QueueController.add

GET     /queue/yourorder            controllers.QueueController.readOwnOrder()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)